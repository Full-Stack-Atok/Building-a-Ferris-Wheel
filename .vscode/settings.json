{
    // âœ¨ Formatting settings for HTML and CSS
    "editor.formatOnSave": true,
    "editor.formatOnType": true,

    // ğŸŒŸ Prettier for consistent formatting
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // ğŸš€ Emmet settings for faster coding
    "emmet.includeLanguages": {
        "html": "html",
        "css": "css"
    },
    "emmet.triggerExpansionOnTab": true,

    // ğŸ” Linting for clean code (requires extensions)
    "css.lint.unknownAtRules": "ignore",
    "css.lint.validProperties": ["composes"],

    // ğŸ–‹ï¸ Editor behavior
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",

    // ğŸ§¹ Trim extra spaces
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // ğŸ’¡ Auto-close tags and suggestions
    "html.autoClosingTags": true,
    "editor.quickSuggestions": {
        "strings": true
    }
}
